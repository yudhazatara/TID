<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
            
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >	        
	
	   	<LinearLayout
	    	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="180dp"
	        android:background="#80000000"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/Confirmation"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:layout_marginLeft="30dp"
	            android:shadowColor="#33262F"
	            android:shadowDx="3"
	            android:shadowDy="3"
	            android:shadowRadius="3"
	            android:text="Un-register Terminal Confirm"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="#FFFFFF"
	            android:textSize="50sp"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/RegCardConfirmation"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="120dp"
	            android:layout_marginRight="120dp"
	            android:layout_marginTop="25dp"
	            android:shadowColor="#33262F"
	            android:shadowDx="3"
	            android:shadowDy="3"
	            android:shadowRadius="3"
	            android:text="Are you sure to un-register this Terminal from merchant cherynaa's ?"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="#FFF600"
	            android:textSize="45sp"
	            android:gravity="center"
	            android:textStyle="bold" />
	                
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="50dp"
	            android:orientation="horizontal" >
	            
	            <Button
		        	android:id="@+id/btnYes"
		            android:layout_width="200dp"
		            android:layout_height="70dp"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginBottom="30dp"
		            android:layout_marginRight="50dp"
		            android:background="@layout/button_green"
		            android:text="Yes"
		            android:textColor="#FFFFFF"
		            android:textStyle="bold"
		            android:textSize="35sp" />
	                
	            <Button
		        	android:id="@+id/btnNo"
		            android:layout_width="200dp"
		            android:layout_height="70dp"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginBottom="30dp"
		            android:background="@layout/button_red"
		            android:text="No"
		            android:textColor="#FFFFFF"
		            android:textStyle="bold"
		            android:textSize="35sp" />
	        
	        </LinearLayout>
	        
		</LinearLayout>
	
	
	</RelativeLayout>
    
</ScrollView>