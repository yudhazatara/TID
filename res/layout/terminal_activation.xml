<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TopUp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:shadowColor="#33262F"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="Terminal Activation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="65sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#80000000"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/merchantID"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Merchant ID"
                    android:maxLength="4"
                    android:textSize="50sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="200dp"
                android:layout_height="118dp"
                android:layout_gravity="center_horizontal"
                android:background="@layout/button_green"
                android:text="Check MID"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="35sp" />
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="118dp"
                android:layout_gravity="center_horizontal"
                android:background="@layout/button_green"
                android:text="Check MID"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:background="#80FFFFFF" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchant name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:textSize="38sp" />
            
            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="Cherrynaa's"
                android:textSize="38sp" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#80FFFFFF" >

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:textSize="38sp" />
            
            <TextView
                android:id="@+id/merchantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="International Financial Center 5th Floor
Jl. Jend. Sudirman Kav 22-23
Jakarta Selatan"
                android:textSize="38sp" />
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>